pipeline {
   agent any

   stages {
      stage('Build') {
         steps {
            // clone
            git 'https://github.com/CarlCool/eMartCase.git'
            // build
            bat '''
                   CD eMartSpringBoot
                   CD emart-erueka
                   mvn -Dmaven.test.failure.ignore=true clean package
                '''
         }

         post {
            // If Maven was able to run the tests, even if some of the test
            // failed, record the test results and archive the jar file.
            success {
               //junit '**/target/surefire-reports/TEST-*.xml'
               archiveArtifacts 'eMartSpringBoot/emart-erueka/target/*.jar'
            }
         }
      }
      
      stage('Deploy') {
         steps {
            bat '''
                 CD eMartSpringBoot
                 CD emart-erueka
                 docker build -t micro-service-emart-erueka .
                 
            '''
         }

         post {
            // If Maven was able to run the tests, even if some of the test
            // failed, record the test results and archive the jar file.
            success {
               //junit '**/target/surefire-reports/TEST-*.xml'
               bat 'docker run -d -p 8084:8084 micro-service-emart-erueka'
            }
         }
      }
      
   }
}
